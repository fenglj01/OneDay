<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--组件和元素的颜色 比如actionBar 按钮-->
        <item name="colorPrimary">@color/color_fff</item>
        <item name="colorPrimaryVariant">@color/color_ccc</item>
        <!--和以前的accent比较相似 主要作用在Fab ProgressBar 这些强调元件上 -->
        <item name="colorSecondary">@color/color_1EB980</item>
        <item name="colorSecondaryVariant">@color/color_008853</item>

        <!-- 出现在可滚动的内容后面 用于默认窗口背景 colorSurface 主要辅助卡片 菜单的颜色 colorError主要作用在组件的错误状态 -->
        <item name="android:colorBackground">@color/color_fff</item>
        <item name="colorSurface">@color/color_fff</item>
        <item name="colorError">@color/color_AD1457</item>
        <!-- On开头的就是作用在其上面的颜色 比如fab的按钮-->
        <item name="colorOnPrimary">@color/color_000</item>
        <item name="colorOnSecondary">@color/color_000</item>
        <item name="colorOnError">@color/color_000</item>
        <item name="colorOnSurface">@color/color_000</item>
        <item name="colorOnBackground">@color/color_fff</item>

        <item name="colorAccent">@color/color_1EB980</item>
        <item name="colorPrimaryDark">@color/color_ccc</item>
        <item name="colorControlNormal">@color/color_000</item>
    </style>

    <!-- Toolbar 弹出风格为溢出 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>


</resources>
