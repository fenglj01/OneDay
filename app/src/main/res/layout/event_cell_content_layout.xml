<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="content"
            type="com.knight.oneday.data.EventAndEventSteps" />

        <variable
            name="topic"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_2"
        android:background="?attr/colorSurface"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone">

        <View
            android:id="@+id/content_tool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:background="?attr/colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/content_remind_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:text="12:00"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintBottom_toBottomOf="@id/content_tool"
            app:layout_constraintEnd_toEndOf="@id/content_tool"
            app:layout_constraintStart_toStartOf="@id/content_tool"
            app:layout_constraintTop_toTopOf="@id/content_tool" />

        <TextView
            android:id="@+id/content_event_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_24"
            android:text="@{content.event.content}"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintEnd_toEndOf="@id/content_tool"
            app:layout_constraintStart_toStartOf="@id/content_tool"
            app:layout_constraintTop_toBottomOf="@id/content_tool" />


        <ImageView
            android:id="@+id/content_driver"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:background="@drawable/divider"
            app:backgroundTint="@color/color_on_surface_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_event_name_tv" />

        <com.knight.oneday.views.step.StepListControlView
            android:id="@+id/content_step_list_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_driver"

            />

        <ImageView
            android:id="@+id/content_driver2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/divider"
            app:backgroundTint="@color/color_on_surface_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_step_list_control" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/content_finish_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:elevation="@dimen/dp_4"
            android:text="@string/finish"
            android:textAppearance="?attr/textAppearanceButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_driver2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>