<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorTransparent"
    android:paddingHorizontal="@dimen/dp_20"
    android:paddingTop="@dimen/dp_16"
    tools:context="com.knight.oneday.add.AddTaskFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/choice_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="?attr/emphasisMediumAlpha"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/date" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/choice_input_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintEnd_toStartOf="@id/choice_input_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice_input_title"
        tools:text="MonDay 25,Mary" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/choice_input_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/actionBarItemBackground"
        android:tint="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@id/choice_input_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/choice_input_content"
        tools:src="@drawable/ic_one_day_date" />

    <ImageView
        android:id="@+id/subject_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider"
        app:backgroundTint="@color/color_on_surface_emphasis_disabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice_input_content" />

</androidx.constraintlayout.widget.ConstraintLayout>