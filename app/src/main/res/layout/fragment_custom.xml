<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomFragment">

    <com.ramotion.directselect.DSListView
        android:id="@+id/ds_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_50"
        android:visibility="invisible"
        app:cell_font_size="8sp"
        app:data_array="@array/guide_content"
        app:picker_box_view="@id/picker_box"
        app:scale_animations="true"
        app:scale_animations_factor="1.3"
        app:scale_animations_pivot_center="false"
        app:selected_index="2"
        app:selector_background="@drawable/tag_picker_bg_list_selector" />

    <com.ramotion.directselect.DSDefaultPickerBox
        android:id="@+id/picker_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:background="@drawable/tag_picker_bg_list_selector"
        android:padding="15dp" />

    <com.knight.oneday.views.step.StepNumberView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:stepNumberInt="1" />

</FrameLayout>