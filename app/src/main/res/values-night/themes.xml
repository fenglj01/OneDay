<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/black_800</item>
        <item name="colorPrimaryVariant">@color/black_900</item>
        <item name="colorSecondary">@color/green_one_day_dark</item>
        <item name="colorSecondaryVariant">@color/green_one_day_dark</item>
        <item name="android:colorBackground">@color/black_900</item>
        <item name="colorSurface">@color/black_800</item>
        <item name="colorError">@color/red_200</item>

        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnBackground">@color/white_50</item>
        <item name="colorOnSurface">@color/white_50</item>
        <item name="colorOnError">@color/black_900</item>
        <item name="scrimBackground">@color/reply_black_900_alpha_087</item>
        <item name="expandedColor">@color/color_1e1e1e</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="elevationOverlayEnabled">true</item>

        <!-- 步骤View 相关 -->
        <item name="stepColorFill">#8e8e8e</item>
        <item name="stepColorStroke">#bebebe</item>
        <item name="stepColorFinishedFill">#008853</item>
        <item name="stepColorFinishedStroke">#1EB980</item>
        <item name="stepColorExecutingFill">#78002e</item>
        <item name="stepColorExecutingStroke">#ad1357</item>
        <item name="stepLineColor">#bebebe</item>
        <item name="stepLineFinishedColor">#008853</item>
        <item name="stepLineExecutingColor">#78002e</item>
        <!-- 时间线recyclerView 颜色相关 -->
        <item name="tlColor">?attr/colorSecondary</item>
        <item name="tlExpiredFillColor">#E11D1D</item>
        <item name="tlExpiredStrokeColor">#fff</item>
        <item name="tlExpiredTextColor">#fff</item>
        <item name="tlFinishedFillColor">?attr/colorSecondary</item>
        <item name="tlFinishedStrokeColor">#fff</item>
        <item name="tlFinishedTextColor">#fff</item>
        <item name="tlUnfinishedFillColor">#fff</item>
        <item name="tlUnfinishedStrokeColor">#d6d6d6</item>
        <item name="tlUnfinishedTextColor">#fff</item>

        <item name="taskRecyclerBackColor">#2E2E2E</item>

    </style>
</resources>