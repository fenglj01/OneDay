<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--组件和元素的颜色 比如actionBar 按钮-->
        <item name="colorPrimary">@color/one_day_black_900_alpha_020</item>
        <item name="colorPrimaryVariant">@color/one_day_black_900_alpha_087</item>
        <!--和以前的accent比较相似 主要作用在Fab ProgressBar 这些强调元件上 -->
        <item name="colorSecondary">@color/one_day_green</item>
        <item name="colorSecondaryVariant">@color/one_day_green_dark</item>
        <!-- 出现在可滚动的内容后面 用于默认窗口背景 colorSurface 主要辅助卡片 菜单的颜色 colorError主要作用在组件的错误状态 -->
        <item name="android:colorBackground">@color/one_day_black_900_alpha_087</item>
        <item name="colorSurface">@color/one_day_black_900_alpha_020</item>
        <item name="colorError">@color/one_day_pink</item>
        <!-- On开头的就是作用在其上面的颜色 比如fab的按钮-->
        <item name="colorOnPrimary">@color/one_day_white</item>
        <item name="colorOnSecondary">@color/one_day_white</item>
        <item name="colorOnError">@color/one_day_white</item>
        <item name="colorOnSurface">@color/one_day_white</item>
        <item name="colorOnBackground">@color/one_day_white</item>

        <item name="colorAccent">@color/one_day_green</item>
        <item name="colorPrimaryDark">@color/one_day_black_900_alpha_087</item>
        <item name="colorControlNormal">@color/one_day_white</item>
    </style>

    <!-- Toolbar 弹出风格为溢出 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>


</resources>